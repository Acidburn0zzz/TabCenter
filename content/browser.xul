<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="chrome://verticaltabs/content/bindings.css" type="text/css"?>
<?xml-stylesheet href="chrome://verticaltabs/skin/verticaltabs.css" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://browser/locale/tabbrowser.dtd" >
<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
         id="verticaltabs-overlay">
  <script src="verticaltabs.js" type="application/javascript" />
  <script src="tabbrowser.js" type="application/javascript" />
  <script src="multiselect.js" type="application/javascript" />
  <script src="groups.js" type="application/javascript" />

  <stringbundleset id="stringbundleset">
    <stringbundle id="verticaltabs-strings"
                  src="chrome://verticaltabs/locale/overlay.properties"/>
  </stringbundleset>

  <!-- Rewrite the "Close Tab" command so that it works for multiselections -->
  <commandset id="mainCommandSet">
    <command id="cmd_close"
             oncommand="VTMultiSelect.closeMultiSelection()"/>
  </commandset>

  <hbox id="browser">
    <vbox id="verticaltabs-box" insertbefore="appcontent">
      <!-- tabs inserted here -->
      <statusbar id="verticaltabs-statusbar"
                 class="chromeclass-extrachrome">
        <toolbarbutton id="verticaltabs-newtabbutton"
                       class="verticaltabs-button"
                       command="cmd_newNavigatorTab"
                       tooltiptext="&newTabButton.tooltip;" />
        <toolbarbutton id="verticaltabs-alltabsbutton"
                       class="verticaltabs-button"
                       command="Browser:ShowAllTabs"
                       tooltiptext="&listAllTabs.label;" />
      </statusbar>
    </vbox>

    <splitter id="verticaltabs-splitter"
              class="chromeclass-extrachrome"
              insertbefore="appcontent" />

    <!-- appcontent with tabbrowser here -->
  </hbox>

</overlay>
